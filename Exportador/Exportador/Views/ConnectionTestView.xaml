<UserControl x:Class="Exportador.UI.Views.ConnectionTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
             xmlns:behaviors="clr-namespace:Exportador.UI.Behaviors"
             xmlns:services="clr-namespace:Exportador.UI.Services"
             xmlns:converters="clr-namespace:Exportador.UI.Converters" 
             mc:Ignorable="d"
             Background="#F5F7FA" d:DesignWidth="880"> 

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 30 0 0" Width="700">
            <TextBlock Text="Passo 1 de 5: Teste de Conexão"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#7F8C8D"
                       Margin="0 0 0 20"/>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 0 0 30">
                <Canvas Width="60" Height="60" HorizontalAlignment="Center">
                    <Ellipse Width="60" Height="60" Stroke="#3498DB" StrokeThickness="1" Canvas.Left="0" Canvas.Top="0" />
                    <Image Source="/Images/servidor.png" Width="42" Height="42" Canvas.Left="9" Canvas.Top="9"  RenderOptions.BitmapScalingMode="HighQuality" />
                </Canvas>
                <TextBlock Text="Teste de Conexão"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#34495E"
                           Margin="0 20 0 10"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Configure e teste a conexão com o banco de dados"
                           FontSize="16"
                           Foreground="#7F8C8D"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>
            <Border Background="White" CornerRadius="8" Padding="60" Margin="0 0 0 30">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Direction="270" Color="#CCCCCC" Opacity="0.5" BlurRadius="5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Configurações de Conexão"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#34495E"
                               Margin="0 0 0 15"/>
                    <TextBlock Text="Informe os dados de conexão com o banco de dados"
                               FontSize="14"
                               Foreground="#7F8C8D"
                               TextWrapping="Wrap"
                               Margin="0 0 0 20"/>
                    <Grid Margin="0 0 0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Servidor" FontSize="14" Foreground="#34495E" VerticalAlignment="Center" Margin="0 0 10 0"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ServerName, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock Grid.Row="0" Grid.Column="3" Text="Banco de Dados" FontSize="14" Foreground="#34495E" VerticalAlignment="Center" Margin="0 0 10 0"/>
                        <TextBox IsReadOnly="False" Grid.Row="0" Grid.Column="4" Text="{Binding DatabaseName, UpdateSourceTrigger=PropertyChanged}"/> 
                    </Grid>
                    <Grid Margin="0 0 0 20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions> 
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Usuário " FontSize="14" Foreground="#34495E" VerticalAlignment="Center" Margin="0 0 10 0"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="                Senha" FontSize="14" Foreground="#34495E" VerticalAlignment="Center" Margin="0 0 10 0" />
                        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="4" VerticalAlignment="Center">
                            <i:Interaction.Behaviors>
                                <behaviors:PasswordBoxBindingBehavior PasswordProvider="{Binding PasswordProvider}" />
                            </i:Interaction.Behaviors>
                        </PasswordBox>

                        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="Testar Conexão" 
                                Style="{StaticResource NavigationButtonStyle}" 
                                HorizontalAlignment="Left" Margin="0 20 0 0" 
                                Command="{Binding TestConnectionCommand}"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" Text="{Binding ConnectionStatusMessage}"
                                   FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap" Margin="0 15 0 0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>

    </Grid>
</UserControl>